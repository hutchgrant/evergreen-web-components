{
  "name": "evergreen-components",
  "version": "0.0.2",
  "private": false,
  "homepage": "https://evergreen-wc.hutchdev.ca",
  "scripts": {
    "build": "rimraf ./public && webpack --config ./webpack.config.prod.js --progress",
    "develop": "webpack-dev-server --config ./webpack.config.develop.js --open",
    "gh-pages": "rimraf ./dist/js && evergreen-scripts gh-pages --src docs",
    "lint": "eslint \"./packages/**/*.js\"  \"./docs/**/*.js\"",
    "serve": "npm run build && ws",
    "start": "npm run develop",
    "test": "rimraf ./reports && karma start",
    "clear": "rimraf ./public && rimraf ./dist",
    "gh-pages:build": "rimraf ./public && webpack --config ./webpack.config.ghpages.js --progress"
  },
  "dependencies": {
    "highlight.js": "^10.7.2",
    "lit": "^2.0.0-rc.2",
    "lit-redux-router": "^0.6.2",
    "postcss-nested": "^5.0.5",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.1.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.14.2",
    "@webcomponents/webcomponentsjs": "^2.5.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-builtin-classes": "^0.6.1",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^1.0.0",
    "css-to-string-loader": "^0.1.3",
    "cssnano": "^4.1.0",
    "eslint": "^5.16.0",
